<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 1"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"/>

    <RelativeLayout
        android:id="@+id/by_station_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="131dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Tab 1"
            android:textAlignment="center"
            android:textSize="11sp"
            android:background="@drawable/bg_inactive"
            android:textColor="@color/tab_inactive_text"
            />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="131dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/tab1"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Tab 2"
            android:background="@drawable/bg_active"
            android:textColor="@color/tab_active_text"
            android:textAlignment="center"
            android:textSize="11sp"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>